<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_light"
    tools:context="com.example.harlemknights.TimeRush.InstructionActivity">

    <TextView
        android:id="@+id/instructionText"
        android:layout_width="320dp"
        android:layout_height="155dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="31dp"
        android:text="Timer Mode: Its a race against time! Click on the button with the monster with the ugly and frigtening  and you earn a point  but click on one with the happy demeanor and you lose time. Earn the highest points you can get in time "
        android:textSize="22dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/instructionText"
        android:layout_marginTop="35dp"
        android:text="Reflex Mode: In this mode, you have three monsters and if you click on the ugly faced monster you gain a point. By clicking on the nice monster you lose a point, and by clicking on the brown monster you gain 2 points. However be careful, in this mode the buttons move quickly and if you touch the background you lose the game "
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Can you handle the rush?"
        android:textColor="#0000ff"
        android:textSize="20dp"
        android:textStyle="bold" />
</RelativeLayout>
